{
  "name": "ohmyguid",
  "displayName": "OhMyGuid",
  "description": "Look up all these guids",
  "version": "0.0.13",
  "engines": {
    "vscode": "^1.102.0"
  },
  "icon": "images/icon.png",
  "publisher": "expecting-snow",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/expecting-snow/ohmyguid.git"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:yaml",
    "onLanguage:bicep",
    "onLanguage:markdown",
    "onLanguage:json"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ohmyguid.clearCache",
        "title": "Clear Cache",
        "category": "OhMyGuid"
      },
      {
        "command": "ohmyguid.openLink",
        "title": "Open Link",
        "category": "OhMyGuid"
      }
    ],
    "codeLens": [
      {
        "language": "yaml",
        "pattern": "**/*.y?(a)ml"
      },
      {
        "language": "bicep",
        "pattern": "**/*.bicep"
      },
      {
        "language": "markdown",
        "pattern": "**/*.md"
      },
      {
        "language": "json",
        "pattern": "**/*.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@azure/arm-authorization": "^9.0.0",
    "@azure/arm-managementgroups": "^2.0.2",
    "@azure/arm-resources": "^6.1.0",
    "@azure/arm-subscriptions": "^5.1.0",
    "@azure/identity": "^4.10.2",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "async-mutex": "^0.5.0"
  }
}
